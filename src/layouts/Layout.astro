---
import { ViewTransitions } from 'astro:transitions';
export interface Props {
	title: string;
	background?: string;
}

const { title, background = '' } = Astro.props;
---

<!doctype html>
<html lang="en" style={'background: ' + background}>
	<head>
		<slot name="head" />
		<ViewTransitions />
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, minimum-scale=1, viewport-fit=cover" />
		<link rel="icon" href="/favicon.png" />
		<title>{title + ' | vtbot'}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
